<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#cdfbf0"
    android:padding="3dp"
    android:layout_height="wrap_content"
    tools:context="com.a2zdaddy.quizmoney.QuizActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="305dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/maincontent">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/postimage"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/postimage"
                android:id="@+id/posttitle"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:textColor="#0a0909"
                android:textStyle="bold"
                android:elevation="4dp"
                android:text="Title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:elevation="4dp"
                android:layout_marginLeft="10dp"

                android:id="@+id/postdescription"
                android:text="Description is here"
                android:layout_below="@id/posttitle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postdescription"
                android:layout_marginTop="10dp"
                android:text="Let's Practice"
                android:textColor="#fff"
                android:background="@drawable/roundbackground"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_touch_app_black_24dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
