<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/quizbackground"
    android:padding="2dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/quizbackground"

        android:text="Faqs about Quiz"

        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/title"
        android:id="@+id/view"
        android:layout_margin="10dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/view"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="image"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/faq1"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_check_circle_black_24dp"
            android:text="You can Play Unlimited times"
            android:layout_below="@id/image"

            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/faq2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_check_circle_black_24dp"
            android:text="You can Earn Unlimited per day"
            android:layout_below="@id/faq1"

            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/faq3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_check_circle_black_24dp"
            android:text="Quizes are verified, have trust"
            android:layout_below="@id/faq2"

            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/faq4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_check_circle_black_24dp"
            android:text="Get Paid in real cash when you reach threshold"
            android:layout_below="@id/faq3"
android:layout_marginBottom="15dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />




    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/body"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#fff"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:id="@+id/cancel"
            android:layout_margin="5dp"
            android:background="@drawable/buttonstyle"
            android:layout_height="wrap_content"
            android:text="ok, got it"/>

    </LinearLayout>

</RelativeLayout>