<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp"
    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/coin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="#fff"

                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_play_earn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Give answer to some easy questions"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_stars_black_24dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Earn points on every correct answer"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Redeem your earned coins to real cash"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textColor="#fff"
                android:id="@+id/startquiz"
                android:drawableRight="@drawable/ic_touch_app_black_24dp"
                android:shadowColor="@color/colorAccent"
                android:background="@drawable/roundbackground"
                android:text="Start Quiz"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="#ffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Frequently Asked Questions"
            android:textSize="17sp"
            android:layout_margin="10dp"
            android:id="@+id/faqstext"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:gravity="left"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:textColor="#ffffff"
            style="@style/Base.TextAppearance.AppCompat.Display1"
            />

    </LinearLayout>



</ScrollView>