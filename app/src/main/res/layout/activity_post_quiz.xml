<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:dividerPadding="10dp"
    android:background="#39aabfc4"
    tools:context="com.a2zdaddy.quizmoney.PostQuiz">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image"

            android:onClick="upldimage"
            android:id="@+id/imagbutton"
            android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageview"
            tools:ignore="ContentDescription" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Title of the Quiz"
            android:maxLines="2"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:id="@+id/post_title"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableStart="@drawable/ic_edit_black_24dp" />


        <EditText
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:hint="Description , Time, Total Question etc"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:id="@+id/post_desc"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableStart="@drawable/ic_edit_black_24dp"
            />







        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="update"
            android:id="@+id/updatebtton"
            android:onClick="update"
            android:textColor="#fafafa"
            android:background="@drawable/roundbackground"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="match_parent">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logout"
                android:layout_weight="1"
                android:onClick="logout"
                android:layout_marginRight="10dp"
                android:textColor="#fafafa"
                android:background="@drawable/roundbackground"
                android:layout_marginTop="20dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see posts"
                android:id="@+id/getpostbt"
                android:onClick="seepost"
                android:layout_weight="1"
                android:textColor="#fafafa"
                android:background="@drawable/roundbackground"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>


    </LinearLayout>



</ScrollView>
